<tr data-link="<%= order_url order %>"
  id="tr-order-<%= order.id %>"
  class="text-info tr-order">
  <td class="text-info"><%= order_counter %></td>
  <td class="text-info"><%= order.room_name %></td>
  <td class="text-info"><%= order.room_address %></td>
  <td class="text-info"><%= order.created_at.strftime Settings.format_date %></td>
  <td class="text-info"><%= order.date_start.strftime Settings.format_date %></td>
  <td class="text-info"><%= order.date_end.strftime Settings.format_date %></td>
  <td class="text-info"><%= order.room_price %></td>
  <td class="text-info"><%= order.price %></td>
  <td class="text-white">
    <p class="ptag-status bg-<%= order.status %>" id="p-status-<%= order.id %>">
      <%= order.status %>
    </p>
  <td>
  <td>
    <%= link_to t(".edit"), edit_order_path(order) %>
    <% if order.pendding? || order.approved? && order.not_expire_to_destroy? %>
      |
      <%= link_to t(".cancel"),
        order_path(order),
        method: :delete,
        data: {confirm: t(".are_you_sure")},
        remote: true,
        id: "btn-cancel-order-#{order.id}" %>
    <% end %>
  </td>
</tr>
