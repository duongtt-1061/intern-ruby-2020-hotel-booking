<h2><%= t ".sign_up" %></h2>
<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <%= f.label t "name" %>
    <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>

    <%= f.label t "email" %>
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>

    <%= f.label t "password" %>
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br/>
    <%= f.label t "password_confirmation" %>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>

    <%= f.submit t(".send"), class: "btn btn-primary btn-login" %>
  <% end %>
</div>
