<div class="container div-edit-infor-user">
  <h2><%= t ".edit_user" %></h2>
  <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put } do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label t("email") %><br/>
      <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label t("name") %><br/>
      <%= f.text_field :name,
          autofocus: true,
          autocomplete: "name",
          class: "form-control" %>
    </div>
    <% if resource.provider.blank? %>
      <div class="field">
        <%= f.label t("password") %> <i>(<%= t ".can_leave_blank" %>)</i><br/>
        <%= f.password_field :password,
            autocomplete: "new-password",
            class: "form-control" %>
        <% if @minimum_password_length %>
          <br/>
          <em>
            <%= @minimum_password_length %>
            <%= t "minimum_password", class: "form-control" %>
          </em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label t("password_confirmation") %><br/>
        <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t("current_password") %> <i>(<%= t ".need_current_password" %>)</i><br/>
        <%= f.password_field :current_password,
            autocomplete: "current-password",
            class: "form-control" %>
      </div>

      <div class="actions btn-update-profile">
        <%= f.submit t(".update"), class: "btn btn-primary" %>
      </div>
    <% end %>
  <% end %>
  <%= link_to orders_path do %>
    <button class="btn btn-success"><%= t "list_order" %></button>
  <% end %>
  <h3><%= t ".cancel_my_account" %></h3>

  <p><%= t ".unhappy" %>?
    <%= button_to t(".cancel_my_account"),
        registration_path(resource_name),
        data: { confirm: t("are_you_sure") },
        method: :delete,
        class: "btn btn-danger" %>
  </p>

  <%= link_to "Back", :back %>
</div>
